<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/element_margin"
    android:background="@drawable/custom_input"
    android:padding="15dp">

    <ImageView
        android:id="@+id/user_sex_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_weight="0"
        tools:srcCompat="@drawable/ic_baseline_male_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_title"
            style="@style/PoppinsBoldTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            tools:text="User title" />

        <TextView
            android:id="@+id/user_subtitle"
            style="@style/PoppinsTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            tools:text="user info" />

    </LinearLayout>

    <ImageView
        android:id="@+id/user_delete_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_baseline_remove_circle_24" />

</LinearLayout>